<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content = "width=device-width, initial-scale=1.0">
    <title>UPLOAD </title>
    <link href="/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap.css">
</head>

<body>
    <div class="container">
        <div class="row"> 
            <header>
                <%- include('partials/navbar'); %>
            </header>
        </div>

        <div class ="row">
            <h1 style="margin-top:50px">Upload Image</h1>
        </div>

        <p>
        <a href="/">return to home</a>
        </p>

        <form method="POST" action="/upload" enctype="multipart/form-data"> 
        <input type="file" name="image"  onchange="loadFile(event)"> <br> 

        <label for="name">name:</label> 
        <input name="name" id = "name" type="text"><br>


        <label for="breed">breed:</label> 
        <input name="breed" id = "breed" type="text">  <br>

        <label for="age">age:</label>  
        <input name="age" id = "age" type = "text"> <br>


        <label for="location">location:</label>    
        <input name="location" id = "location" type = "text"> <br>

        <label for="fixed">fixed:</label>
        <input type="radio" name="fixed" >Yes</input>
        <input type="radio" name="fixed">No</input> <br> 

        <label for="litter">litter trained:</label>
        <input type="radio" name="litter" >Yes</input>
        <input type="radio" name="litter">No</input>    <br>  

        <label for="description">description:</label>
        <input name="description" id = "description" type="text"> <br>

        <br> <br> <br>

        <input type="submit" value = "submit"> 

        </form>



        <p><img id="output" width="200" /></p>


        <%- include('partials/footer'); %>

</div>

<script>
    var loadFile = function(event) {
    var image = document.getElementById('output');
    image.src = URL.createObjectURL(event.target.files[0]);
    };


</script>

















</body>
</html>